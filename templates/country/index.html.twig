{% extends 'base.html.twig' %}



{% block body %}

    <div class="container">
        {#<a href="/country/add" class="btn btn-primary">Ajouer un Pays</a><br><br>#}
        <a href="{{ path('country_new') }}" class="btn btn-primary">Ajouer un Pays</a><br><br>

        <table class="table table-striped table-bordered">
            {% for country in countries %}

                <tr>
                    <td>
                        {{ country.name }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </td>
                    <td>
                        {% if country.capital %}
                            ({{ country.capital.name }})
                        {% endif %}
                    </td>

                    {#<td><a href="/country/{{ country.id }}/delete" class="btn btn-sm btn-danger">Supprimer</a></td>#}
                    <td><a href="{{ path('country_edit', {'id' : country.id}) }}" class="btn btn-sm btn-warning">Modifier</a></td>
                    <td><a href="{{ path('country_delete', {'id' : country.id}) }}" class="btn btn-sm btn-danger">Supprimer</a></td>
                </tr>

            {% endfor %}
        </table>
    </div>

{% endblock %}
