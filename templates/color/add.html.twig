{% extends 'base.html.twig' %}

{%  block title %}Ajout d'une Couleur{% endblock %}

{% block body %}

    <section class="container">


            <h1>Ajout d'un Couleur</h1>

            {% if method == 'POST' %}

                <section >
                    {% if success %}

                        Couleur Enregistrée !

                    {% else %}

                        Couleur non Enregistrée, Sorry !!

                    {% endif %}
                </section>

            {% endif %}




            <form method="post">

                <input type="text" name="nameEn" placeholder="Nom en Anglais" class="form-control"><br>

                <input type="text" name="nameFr" placeholder="Nom en Français" class="form-control"><br>

                <input type="text" name="hexa" placeholder="Couleur en Héxadécimal" class="form-control"><br>

                <button class="btn btn-primary">Enregister</button>

            </form>


    </section>

{% endblock %}
